pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout code from Git repository
                git 'https://github.com/your/repository.git'
            }
        }
        
        stage('Build') {
            steps {
                // Build the project (replace with your build commands)
                sh 'mvn clean install'
            }
        }
        
        stage('Test') {
            steps {
                // Run tests (replace with your test commands)
                sh 'mvn test'
            }
        }
    }
    
    post {
        always {
            // Clean up after the build
            deleteDir()
        }
        
        success {
            // Send notification on success (replace with your notification plugin)
            echo 'Build successful! Sending notification...'
        }
        
        failure {
            // Send notification on failure (replace with your notification plugin)
            echo 'Build failed! Sending notification...'
        }
    }
}
